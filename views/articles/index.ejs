<div class="container">
    <div class="row justify-content-center">
        <a class="btn btn-success" href="articles/new">New Article</a>
    </div>
</div>
<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        <% articles.forEach(article => { %>
        <div class="card bg-light mb-4 shadow">
            <div class="card-body position-relative">
                <h3 class="card-title">
                    <%= article.title %>
                </h3>
                <div class="card-text"><%= article.description %></div>
                <div class="card-text text-muted"><%= article.createdAt.toLocaleDateString() %></div>
                <a class="card-link stretched-link" href="articles/<%= article.slug %>">Read
                </a>
            </div>
            <div class="card-footer">
                <form class="delete-form" action="articles/<%= article.id %>?_method=DELETE" method="POST">
                    <button class="btn btn-outline-danger" type="submit">Delete</button>
                </form>
            </div>
        </div>
        <% }) %>
    </div>
</div>